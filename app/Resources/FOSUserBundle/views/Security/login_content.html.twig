{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container">
    <div class="row">
        <div class="col-12 col-md-12">
            <a href="#" class="logo text-center">
                <img class="img-fluid" src="{{ asset('img/ao-logo.png') }}" alt="">
            </a>
        </div>
    </div>
    <div class="row">
        <div class="panel">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <h3>Вход на AsianOdds</h3>
                <div class="form-group">
                    <label for="username">{{ 'security.login.username'|trans }}:</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
                <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans }}:</label>
                    <input type="password" class="form-control" id="password" name="_password" required="required" />
                </div>
                <div class="form-check">
                    <label for="remember_me" class="form-check-label">
                      <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" value="on" />
                      {{ 'security.login.remember_me'|trans }}
                    </label>
                </div>
                <input type="submit" class="btn btn-danger login-btn" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </form>
        </div>
    </div>
    <div class="row">
        <div class="copyright">
            <small>Copyright © 2017 AsianOdds. All Rights Reserved.</small>
        </div>
    </div>
</div>
